<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Staff.StoreManager.StoreDashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="25dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Items in stock"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/buttonColor"
            android:id="@+id/btn_items"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Donations"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/buttonColor"
            android:id="@+id/btn_new_donations"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Approved Donations"
            android:backgroundTint="@color/buttonColor"
            android:id="@+id/btn_approved_donations"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivered Donations"
            android:backgroundTint="@color/buttonColor"
            android:id="@+id/btn_delivered_donations"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmed Donations"
            android:backgroundTint="@color/buttonColor"
            android:id="@+id/btn_confirmed_donations"/>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>